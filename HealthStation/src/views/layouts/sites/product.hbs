{{#section 'title'}}
<title>Category</title>
{{/section}}

{{#section 'style'}}
<link href="/css/home.css" rel="stylesheet" />
<link href="/css/slickSlider/slick.css" rel="stylesheet" />
<link href="/css/slickSlider/slick-theme.css" rel="stylesheet" />
<style>
    .product-slider .slick-dots {
        bottom: -80px;
    }
</style>
{{/section}}

{{#section 'script'}}
{{!-- SlickSlider --}}
<script type="text/javascript" charset="utf8" src="/js/plugins/slick.min.js"></script>
<script src="/js/custom/slickInit.js"></script>
{{/section}}

<section class="section bg-gray pt-5">
    <!-- Container Start -->
    <div class="container">
        <div class="row">
            <!-- Left sidebar -->
            <div class="col-md-8">
                <div class="product-details">
                    <h1 class="product-title">{{product.name}}</h1>
                    <div class="product-meta">
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <i class="fa fa-folder-open-o"></i>
                                Danh mục
                                <a href="/category/{{product.category_id}}">{{category.name}}</a>
                            </li>
                        </ul>
                    </div>

                    <!-- product slider -->
                    <div class="product-slider mb-2">
                        {{#each product.images}}
                        <div class="product-slider-item my-4"
                            data-image="{{this}}">
                            <img class="d-block img-fluid w-100" maxheight="300px"
                                src="{{this}}">
                        </div>
                        {{/each}}
                    </div>
                    <!-- product slider -->

                    <div class="content mt-5 pt-5">
                        <ul class="nav nav-pills  justify-content-center" id="pills-tab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home"
                                    role="tab" aria-controls="pills-home" aria-selected="true">Chi tiết gói hàng</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile"
                                    role="tab" aria-controls="pills-profile" aria-selected="false">Specifications</a>
                            </li>
                        </ul>
                        <div class="tab-content" id="pills-tabContent">
                            <div class="tab-pane fade show active" id="pills-home" role="tabpanel"
                                aria-labelledby="pills-home-tab">
                                <h3 class="tab-title">Gói hàng nhu yếu phẩm gồm: </h3>
                                <ul></ul>

                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quibusdam sed, officia
