                        <br>
                        Hỗ trợ giao hàng tận nhà
                    </p>
                    <br>
                    <br>
                </div>
                <!-- Advance Search -->
                <div class="advance-search">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-12 col-md-12 align-content-center">
                                <form action="/necessary-packet/search" method="get">
                                    <div class="form-row">
                                        <div class="form-group col">
                                            <input type="text" class="form-control my-2 my-lg-1" id="inputtext4"
                                                placeholder="Bạn đang tìm gì à" name="searchTerm" required>
                                        </div>
                                        <div class="form-group col">
                                            <select class="w-100 form-control mt-lg-1 mt-md-2" name="category">
                                                <option value="">Danh mục</option>
                                                {{#each categories}}
                                                <option value="{{this.category_id}}">{{this.name}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                        {{!-- <div class="form-group col-md-3">
                                            <select class="w-100 form-control mt-lg-1 mt-md-2">
                                                <option>Lọc theo</option>
                                                <option value="">Giá thấp</option>
                                                <option value="">Giá cao</option>
                                            </select>
                                        </div> --}}
                                        <div class="form-group col-md-2 align-self-center">
                                            <button type="submit" class="btn btn-info">Search Now</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container End -->
</section>

<section class="popular-deals section bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h2>Món hàng mua nhiều</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- offer 01 -->
            <div class="col-lg-12">
                <div class="trending-ads-slide">
                    {{#each package}}
                    <div class="col-sm-12 col-lg-4">

                        {{> packetPartial
                        imgSrc=this.img_url
                        name=this.name id=this.package_id description="BestSeller"}}
                    </div>

                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    </div>
</section>
