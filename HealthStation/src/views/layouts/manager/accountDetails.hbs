{{#section 'title'}}
  <title>Lịch sử quản lý</title>
{{/section}}

{{#section 'style'}}
  {{! DataTables }}
  <link rel='stylesheet' type='text/css' href='/DataTables/datatables.css' />
{{/section}}

{{#section 'script'}}
  {{! Datatables }}
  <script
    type='text/javascript'
    charset='utf8'
    src='/DataTables/datatables.js'
  ></script>
  <script>
    $(document).ready(function () { $('#table_account_history').DataTable(); });
    $(document).ready(function () { $('#table_account_relate').DataTable(); });
  </script>
{{/section}}

<div class='col-md-12 p-0'>
  <div class='card'>
    <div class='card-header'>
      <h4 class='card-title'>Lịch sử được quản lý của bệnh nhân
        {{username}}
        /
        {{fullname}}</h4>
    </div>
    <div class='card-body'>
      <div class='table-responsive p-3'>
        <table class='table table-hover' id='table_account_history'>
          <thead class='text-primary'>
            <tr>
              <th>
                Hành động
              </th>
              <th>
                Mô tả
              </th>
              <th class='text-center'>
                Ngày
              </th>
            </tr>
          </thead>
          <tbody>
            {{#each data}}
              <tr>
                <td>
                  {{this.type}}
                </td>
                <td>
                  {{this.description}}
                </td>
                <td class='text-center'>
                  {{this.create_at}}
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class='col-md-12 p-0'>
  <div class='card'>
    <div class='card-header'>
      <h4 class='card-title'> Danh sách những người liên quan</h4>
    </div>
    <div class='card-body'>
      <div class='table-responsive p-3'>
        <table class='table table-hover' id='table_account_relate'>
          <thead class='text-primary'>
            <tr>
              <th>
                Họ tên
              </th>
              <th>
                Địa chỉ
              </th>
              <th class='text-right'>
                Trạng thái
              </th>
              <th class='text-center'>
                Action
              </th>
            </tr>
          </thead>
          <tbody>
            {{#each relate}}
              <tr>
                <td>
                  {{this.fullname}}
                </td>
                <td>
                  {{this.city}}
                </td>
                <td class='text-center'>
                  F{{this.state}}
                </td>
                <td class='text-center'>
                  <a
                    href='/manager/account-management/{{this.account_id}}'
                    class='btn btn-success'
                  >Chi tiết</a>
                  <a
                    href='/manager/account-management/edit{{this.account_id}}'
                    class='btn btn-info'
                  >Sửa</a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>