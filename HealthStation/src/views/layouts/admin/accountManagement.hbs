{{#section 'title'}}
<title>Quản lý tài khoản</title>
{{/section}}

{{#section 'style'}}
{{!-- DataTables --}}
<link rel="stylesheet" type="text/css" href="/DataTables/datatables.css">
{{/section}}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title"> Simple Table</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive p-3">
                <table class="table table-hover" id="table_account_management">
                    <thead class=" text-primary">
                        <tr>
                            <th>
                                ID
                            </th>
                            <th>
                                Username
                            </th>
                            <th class="text-right">
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each data}}
                        <tr>
                            <td>
                                {{this.account_id}}
                            </td>
                            <td>
                                {{this.username}}
                            </td>
                            <td class="text-right">
                                <a href="/admin/account-management/{{this.account_id}}" class="btn btn-success">History</a>
                                <a href="/admin/account-management/{{this.account_id}}/toggle-active" {{#ifCond this.permission '==' 3}} disabled {{/ifCond}} class="btn btn-danger">Block</a>
                                <a href="/admin/account-management/{{this.account_id}}/toggle-active" {{#ifCond this.permission '==' 2}} disabled {{/ifCond}} class="btn btn-info">Unblock</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{{#section 'script'}}
{{!-- Datatables --}}
<script type="text/javascript" charset="utf8" src="/DataTables/datatables.js"></script>
<script>
    $(document).ready(function () {
        $('#table_account_management').DataTable();
    });
</script>
{{/section}}