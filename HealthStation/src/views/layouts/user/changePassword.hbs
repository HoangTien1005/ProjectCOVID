{{#section 'title'}}
<title>Đổi mật khẩu</title>
{{/section}}

<div class="card w-50 mx-auto px-3 pb-3">
    <form id="registerFormValidation" action="/user/{{id}}/change-password" method="POST" required>
        <div class="card-header">
            <h4 class="card-title">
                Đổi mật khẩu
            </h4>
        </div>
        <div class="card-content">
            <div class="form-group">
                <label class="control-label">
                    Mật khẩu cũ <star class="text-danger">*</star>
                </label>
                <input class="form-control" name="password" type="password" required="true" autocomplete="off">
            </div>
            <div class="form-group">
                <label class="control-label">Mật khẩu mới <star class="text-danger">*</star></label>
                <input class="form-control" name="newPassword" type="password" required="true">
            </div>
            <div class="form-group">
                <label class="control-label">Xác nhận mật khẩu mới <star class="text-danger">*</star></label>
                <input class="form-control" name="password_confirmation" type="password" required="true">
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-info btn-fill pull-right">Lưu thay đổi</button>
        </div>
        <p class="text-{{message.status}}">{{message.content}}</p>
    </form>
</div>